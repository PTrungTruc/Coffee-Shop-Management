@using jojo.Models;
@using jojo.DTO;
@{
    Layout = null;
    NhanVienDto employee = ViewBag.nhanvien as NhanVienDto;
    List<hoadon> invoices = ViewBag.hoadon as List<hoadon>;
    var revenue = 0;

    var z = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <title>Report</title>
    <script>

    </script>
    <style>
        .minheight {
            min-height: 370px;
        }
    </style>
</head>
<body>

    <div class="container minheight">
        <div class="row">
            <h2 class="text-center text-info">End of Day Report</h2>
            <h3 class="text-center text-info">@ViewBag.ngay</h3>
        </div>

        <br />

        <div class="row">
            <div class="panel panel-success">
                <div class="panel-heading"><h3 class="panel-title">Revenue</h3></div>
                <div class="panel-body">
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Time</th>
                                <th>Customer Name</th>
                                <th>Sales Person</th>
                                <th>Discount</th>
                                <th>Total Amount</th>
                                <th>Amount Due</th>
                                <td>Details</td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (invoices != null)
                            {
                                foreach (var invoice in invoices)
                                {
                                    revenue = revenue + invoice.khachphaitra;
                                    var h = "chitiet" + z;
                                    var h2 = '#' + h;
                                    z++;
                                    <tr>
                                        <td>@z</td>
                                        <td>@invoice.ngayhoadon.ToShortDateString() @invoice.ngayhoadon.ToShortTimeString()</td>
                                        <td>@invoice.khachhang.tenkhachhang</td>
                                        <td>@invoice.nhanvien.hovaten</td>
                                        <td>@invoice.giamgia</td>
                                        <td>@invoice.tongtien</td>
                                        <td>@invoice.khachphaitra</td>
                                        <td><button data-toggle="collapse" class="btn btn-info" data-target="@h2"><span class="glyphicon glyphicon-plus"></span></button></td>
                                    </tr>
                                    <tr id="@h" class="collapse">
                                        <td colspan="6">
                                            <div class="panel panel-info mypanel">
                                                <table class="table borderless">
                                                    <tr>
                                                        <th>Product Name</th>
                                                        <th>Quantity</th>
                                                        <th>Unit Price</th>
                                                        <th>Price</th>
                                                        <th>Total</th>
                                                    </tr>
                                                    @if (invoice.chitiethoadons != null)
                                                    {
                                                        foreach (chitiethoadon detail in invoice.chitiethoadons)
                                                        {
                                                            <tr>
                                                                <td>@detail.sanpham.ten</td>
                                                                <td>@detail.soluong</td>
                                                                <td>@detail.sanpham.gia</td>
                                                                <td>@(detail.soluong * detail.sanpham.gia)</td>
                                                                <td>@detail.thanhtien</td>
                                                            </tr>
                                                            if (detail.bangphus != null)
                                                            {
                                                                foreach (bangphu extra in detail.bangphus)
                                                                {
                                                                    <tr>
                                                                        <td style="text-indent:10px;">+ @extra.sanphamphu.ten</td>
                                                                        <td>@extra.soluong</td>
                                                                        <td>@extra.sanphamphu.gia</td>
                                                                        <td>@(extra.soluong * extra.sanphamphu.gia)</td>
                                                                    </tr>
                                                                }
                                                            }
                                                        }
                                                    }
                                                </table>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                    <h3>Total Revenue: @revenue</h3>


                </div>
            </div>
        </div>

        <br />


    </div>

    @RenderPage("/Views/Share/footer.cshtml")
</body>
</html>