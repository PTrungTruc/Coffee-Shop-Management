@using jojo.Models;
@using jojo.DTO;
@{
    Layout = null;
    NhanVienDto employee = ViewBag.nhanvien as NhanVienDto;
    List<TKDoanhThu> list = ViewBag.doanhthu as List<TKDoanhThu>;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <title>Revenue</title>
    <script>

    </script>
    <style>
        .minheight {
            min-height: 370px;
        }
    </style>
</head>
<body>
    @RenderPage("/Views/Share/nav_quanly.cshtml")
    <div class="container minheight">
        <div class="row">
            <h2 class="text-center text-info">Revenue Statistics Results</h2>
            <h3>From Date: @ViewBag.tungay</h3>
            <h3>To Date: @ViewBag.toingay</h3>
            <h3>Total: @ViewBag.tongtien</h3>
        </div>
        <br />
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>Invoice Date</th>
                        <th>Discount</th>
                        <th>Total Amount</th>
                        <th>Amount Due</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < list.Count; i++)
                    {
                        <tr>
                            <td>@list[i].ngay.ToString("dd/MM/yyyy")</td>
                            <td>@list[i].giamgia</td>
                            <td>@list[i].tongtien</td>
                            <td>@list[i].khachphaitra</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @RenderPage("/Views/Share/footer.cshtml")
</body>
</html>