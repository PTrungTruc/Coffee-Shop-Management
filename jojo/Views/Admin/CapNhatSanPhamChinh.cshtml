@using jojo.Models
@using jojo.DTO
@{
    sanpham product = ViewBag.sanpham as sanpham;
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <title>UpdateMainProduct</title>
    <script>

        function Xoa(id) { // Consider renaming this to Delete()
            var r = confirm("Are you sure you want to delete this product?");
            if (r == true) {
                window.location = "/Admin/XoaSanPham2?id=" + id; // Consider renaming XoaSanPham2 to DeleteProduct in your controller
            }
        }

        $(document).ready(function () {
            $('form').submit(function () {

                var ten = $('#ten').val();
                var gia = $('#gia').val();

                if (ten == "") {
                    alert("Product name cannot be blank");
                    return false;
                }

                if (gia == "") {
                    alert("Product price cannot be blank");
                    return false;
                }

            });

        });
    </script>
</head>
<body>
    @RenderPage("/Views/Share/nav_admin.cshtml")
    <div class="container">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6">
                <form class="form-horizontal" action="/Admin/CapNhatSanPham2" method="post">
                    <input type="hidden" class="form-control" name="id" value="@product.id">
                    <div class="form-group">
                        <label class="control-label col-sm-3">* Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="ten" name="ten" value="@product.ten">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">* Price</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" id="gia" name="gia" min="1000" max="1000000" value="@product.gia">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Product Type</label>
                        <div class="col-sm-9">
                            <select class="form-control" name="loai" id="loai">
                                @if (product.loai == "1")
                                {
                                    <option value="1" selected>Smoothie</option>

                                    <option value="2">Milk Tea</option>

                                    <option value="3">Other Product</option>

                                }
                                else
                                {
                                    if (product.loai == "2")
                                    {
                                        <option value="1">Smoothie</option>

                                        <option value="2" selected>Milk Tea</option>

                                        <option value="3">Other Product</option>

                                    }
                                    else
                                    {
                                        <option value="1">Smoothie</option>

                                        <option value="2">Milk Tea</option>

                                        <option value="3" selected>Other Product</option>

                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-default">Update</button>
                            <input type="button" class="btn btn-default" value="Delete" onclick="Xoa('@product.id')">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>