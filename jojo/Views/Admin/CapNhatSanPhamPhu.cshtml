@using jojo.Models
@using jojo.DTO
@{
    sanphamphu product = ViewBag.sanphamphu as sanphamphu;
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <title>UpdateAdditionalProduct</title>
    <script>
        function Xoa(id) { // Consider renaming this to Delete()
            var r = confirm("Are you sure you want to delete this product?");
            if (r == true) {
                window.location = "/Admin/XoaSanPham3?id=" + id; // Consider renaming XoaSanPham3 to DeleteProduct in your controller
            }
        }
        $(document).ready(function () {
            $('form').submit(function () {

                var ten = $('#ten').val();
                var gia = $('#gia').val();

                if (ten == "") {
                    alert("Product name cannot be blank");
                    return false;
                }

                if (gia == "") {
                    alert("Product price cannot be blank");
                    return false;
                }

            });

        });
    </script>
</head>
<body>
    @RenderPage("/Views/Share/nav_admin.cshtml")
    <div class="container">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6">
                <form class="form-horizontal" action="/Admin/CapNhatSanPham3" method="post">
                    <input type="hidden" class="form-control" name="id" value="@product.id">
                    <div class="form-group">
                        <label class="control-label col-sm-3">* Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" 1 id="ten" name="ten" value="@product.ten">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">* Price</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" id="gia" name="gia" min="1000" max="1000000" value="@product.gia">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-default">Update</button>
                            <input type="button" class="btn btn-default" value="Delete" onclick="Xoa('@product.id')">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>