@using jojo.Models
@using jojo.DTO
@{
    Layout = null;
    List<sanpham> products = ViewBag.sanpham as List<sanpham>;
    List<sanphamphu> additionalProducts = ViewBag.sanphamphu as List<sanphamphu>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <title>Products</title>
    <style>
        .table-hover tr:hover {
            cursor: pointer
        }
    </style>
</head>
<body>
    @RenderPage("/Views/Share/nav_admin.cshtml")
    <div class="container">
        <div class="row">
            <div class="pull-right">
                <a href="/Admin/ThemSanPham" type="button" class="btn btn-success btn-lg">Add Product</a>
            </div>
        </div>
        <br /><br />

        <div class="row">
            <div class="col-sm-3">
                <div class="panel panel-success">
                    <div class="panel-heading"><h3 class="panel-title">Coffee - Smoothies</h3></div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < products.Count; i++)
                                {
                                    if (products[i].loai == "1")
                                    {
                                        <tr onclick="window.location = '/Admin/CapNhatSanPhamChinh?id=@products[i].id'">
                                            <td>@products[i].ten</td>
                                            <td>@products[i].gia</td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="panel panel-success">
                    <div class="panel-heading"><h3 class="panel-title">Milk Tea</h3></div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < products.Count; i++)
                                {
                                    if (products[i].loai == "2")
                                    {
                                        <tr onclick="window.location = '/Admin/CapNhatSanPhamChinh?id=@products[i].id'">
                                            <td>@products[i].ten</td>
                                            <td>@products[i].gia</td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="panel panel-success">
                    <div class="panel-heading"><h3 class="panel-title">Other Products</h3></div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < products.Count; i++)
                                {
                                    if (products[i].loai == "3")
                                    {
                                        <tr onclick="window.location = '/Admin/CapNhatSanPhamChinh?id=@products[i].id'">
                                            <td>@products[i].ten</td>
                                            <td>@products[i].gia</td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="panel panel-success">
                    <div class="panel-heading"><h3 class="panel-title">Additional Products</h3></div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < additionalProducts.Count; i++)
                                {
                                    <tr onclick="window.location = '/Admin/CapNhatSanPhamPhu?id=@additionalProducts[i].id'">
                                        <td>@additionalProducts[i].ten</td>
                                        <td>@additionalProducts[i].gia</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>



</body>
</html>