@using jojo.Models;
@using jojo.DTO;
@{
    Layout = null;
    nhanvien employee = ViewBag.nhanvien as nhanvien;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <title>UpdateEmployee</title>
    <script>
        $(document).ready(function () {

            $('form').submit(function () {

                var ten = $('#hovaten').val();
                var congviec = $('#congviec').val();
                var taikhoan = $('#taikhoan').val();
                var matkhau = $('#matkhau').val();

                if (ten == "") {
                    alert("Full name cannot be blank");
                    return false;
                }

                if (congviec == "") {
                    alert("Job title cannot be blank");
                    return false;
                }

                if (taikhoan == "") {
                    alert("Username cannot be blank");
                    return false;
                }

                if (matkhau == "") {
                    alert("Password cannot be blank");
                    return false;
                }
            });
        });
    </script>
</head>
<body>
    @RenderPage("/Views/Share/nav_admin.cshtml")
    <div class="container">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6">


                <form class="form-horizontal" method="post" action="/Admin/CapNhatNhanVien2">
                    <input type="hidden" class="form-control" name="id" value="@employee.id">
                    <div class="form-group">
                        <label class="control-label col-sm-3">* Full Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="hovaten" name="hovaten" value="@employee.hovaten">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Gender</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="gioitinh" name="gioitinh">
                                @if (employee.gioitinh == "Nam")
                                {
                                    <option value="Male" selected>Male</option>

                                    <option value="Female">Female</option>

                                }
                                else
                                {
                                    <option value="Male">Male</option>

                                    <option value="Female" selected>Female</option>

                                }

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Date of Birth</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="ngaysinh" name="ngaysinh" value="@employee.ngaysinh">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Phone Number</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="sodienthoai" name="sdt" value="@employee.sodienthoai">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Address</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="diachi" name="diachi" value="@employee.diachi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">ID Card</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="chungminhthu" name="cmnd" value="@employee.cmnd">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Start Date</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="ngayvaolam" name="ngayvaolam" value="@employee.ngayvaolam">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">* Job Title</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="congviec" name="congviec" value="@employee.congviec">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Account Type</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="loai" name="loai">
                                @if (employee.loai == 1)
                                {
                                    <option value="1" selected>Employee</option>

                                    <option value="2">Manager</option>

                                }
                                else
                                {
                                    <option value="1">Employee</option>

                                    <option value="2" selected>Manager</option>

                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">* Username</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="taikhoan" name="taikhoan" value="@employee.taikhoan">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">* Password</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="matkhau" name="matkhau" value="@employee.matkhau">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-default">Confirm</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>