@using jojo.Models
@using jojo.DTO
@{
    Layout = null;
    List<nhanvien> employees = ViewBag.nhanvien as List<nhanvien>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <title>Employees</title>
    <script>
        function Xoa(id) { // Consider renaming this function to 'Delete' for clarity
            var r = confirm("Are you sure you want to delete this employee?");
            if (r == true) {
                window.location = "/Admin/XoaNhanVien?id=" + id; // Consider renaming 'XoaNhanVien' to 'DeleteEmployee' in your controller for consistency
            }
        }
    </script>
</head>
<body>
    @RenderPage("/Views/Share/nav_admin.cshtml")
    <div class="container text-center">
        <div class="pull-right">
            <a href="/Admin/ThemNhanVien" type="button" class="btn btn-success btn-lg" style="margin-bottom: 20px;">Add Employee</a>
        </div>
        <br/><br/>
        <table class="table table-striped mx-auto">
            <thead>
                <tr>
                    <th class="col-sm-1 text-center">#</th>
                    <th class="col-sm-3 text-center">Full Name</th>
                    <th class="col-sm-2 text-center">Job Title</th>
                    <th class="col-sm-2 text-center">Username</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < employees.Count; i++)
                {
                    <tr>
                        <td class="col-sm-1">@(i + 1)</td>
                        <td class="col-sm-3">@employees[i].hovaten</td>
                        <td class="col-sm-2">@employees[i].congviec</td>
                        <td class="col-sm-2">@employees[i].taikhoan</td>
                        <td>
                            <div class="btn-group">
                                <a target="_blank" href="/Admin/ChiTietNhanVien?id=@employees[i].id" class="btn btn-primary">Details</a>
                                <a href="/Admin/CapNhatNhanVien?id=@employees[i].id" class="btn btn-success">Update</a>
                                <a href="#" onclick="Xoa('@employees[i].id');return false" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>