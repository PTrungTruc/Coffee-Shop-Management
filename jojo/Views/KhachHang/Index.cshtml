@using jojo.Models;
@using jojo.DTO;
@{
    Layout = null;
    NhanVienDto employee = ViewBag.nhanvien as NhanVienDto;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <title>Customers</title>
    <style>
        .minheight {
            min-height: 370px;
        }
    </style>
    <script>
        $(document).ready(function () {
            TakeData(1); // Load data initially

            // Trigger the TakeData function when the row per page value is changed
            $('#rowperpage').on('change', function () {
                TakeData(1); // Reset to first page when row per page is changed
            });

            // Trigger the search when the Enter key is pressed in the customer name input
            $('#tenkhachhang').on('keypress', function (e) {
                if (e.which === 13) { // 13 is the Enter key code
                    TakeData(1); // Trigger search
                }
            });

            // Trigger the search when the glyphicon-search button is clicked
            $('.btn-default').on('click', function () {
                TakeData(1); // Trigger search
            });
        });

        function Xoa(id) { // Consider renaming this to Delete()
            var r = confirm("Are you sure you want to delete this customer?");
            if (r == true) {
                window.location = "/DashBoard/XoaKhachHang?id=" + id; // Consider renaming XoaKhachHang to DeleteCustomer in your controller
            }
        }

        var pagenum = 1;
        function TakeData(j) {
            var tenkhachhang = $('#tenkhachhang').val();
            var sodienthoai = $('#dienthoai').val().replace(/ /g, '');
            var diachi = $('#diachi').val();
            var email = $('#email').val();
            var trangthai = $('#trangthai').val();
            var rowperpage = $('#rowperpage').val();

            pagenum = j;

            if (rowperpage == "") {
                alert("The number of customers to view per page cannot be empty");
                return;
            }

            $.ajax({
                type: 'GET',
                contentType: "application/json; charset=utf-8",
                url: '/KhachHang/TakeData',
                data: { tenkhachhang: tenkhachhang, sodienthoai: sodienthoai, diachi: diachi, email: email, trangthai: trangthai, page: pagenum, rowperpage: rowperpage },
                success: function (result) {
                    $('#main').html('');
                    if (result.data.length == 0) {
                        $('.btn-group').html('');
                    }

                    for (var i = 0; i < result.data.length; i++) {
                        var s = '<tr>';
                        s = s + '<td class="col-sm-1">' + (i + 1) + '</td>';
                        s = s + '<td class="col-sm-2">' + result.data[i].tenkhachhang + '</td>';
                        s = s + '<td class="col-sm-2">' + result.data[i].sodienthoai + '</td>';
                        s = s + '<td class="col-sm-2">' + result.data[i].diachi + '</td>';
                        s = s + '<td class="col-sm-1">' + result.data[i].email + '</td>';
                        s = s + '<td class="col-sm-2">' + result.data[i].ghichu + '</td>';
                        s = s + '<td class="col-sm-2">';
                        s = s + '<a href="/KhachHang/CapNhat?id=' + result.data[i].id + '" class="btn btn-success">Update</a>';
                        s = s + '</td>';
                        s = s + '</tr>';
                        $('#main').append(s);
                    }

                    // Update pagination links
                    var maxpage = Math.ceil(parseFloat(result.count) / rowperpage);
                    var s = '';
                    for (var i = -3; i < 5; i++) {
                        var j = pagenum + i;
                        if (j >= 1 && j <= maxpage) {
                            if (j == pagenum) {
                                var bt = '<button onclick="TakeData(' + j + ')" type="button" class="btn btn-default" style="color:red">' + j + '</button>';
                                s = s + bt;
                            } else {
                                var bt = '<button onclick="TakeData(' + j + ')" type="button" class="btn btn-default">' + j + '</button>';
                                s = s + bt;
                            }
                        }
                    }
                    $('.btn-group').html(s);

                },
                dataType: 'json',
                error: function (e) {
                    alert(e);
                }
            });
        }
    </script>

</head>
<body>
    @RenderPage("/Views/Share/nav_quanly.cshtml")
    <div class="container minheight">
        <div class="row">
            <div class="col-sm-1">
                <div class="pull-left">
                    <input type="number" class="form-control" id="rowperpage" value="5" min="1" max="50">
                </div>
            </div>
            <div class="col-sm-offset-3 col-sm-4">
                <div class="input-group">
                    <div class="input-group-btn">
                        <button class="btn btn-default" onclick="TakeData(1)"><i class="glyphicon glyphicon-search"></i></button>
                        <button type="button" data-toggle="collapse" data-target="#demo" class="btn btn-default collapsed"><span class="caret"></span></button>
                    </div>
                    <input type="text" class="form-control" placeholder="Customer Name" id="tenkhachhang">
                </div>
                <div id="demo" class="collapse" style="height: 0px;">
                    <div class="panel panel-info">
                        <div class="panel-body form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Phone</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="dienthoai">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Address</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="diachi">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Email</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Status</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="trangthai">
                                        <option value=""></option>
                                        <option value="Updated">Updated</option>
                                        <option value="Not Updated">Not Updated</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="pull-right">
                    <a href="/KhachHang/ThemMoi" class="btn btn-default">Add Customer</a>
                </div>
            </div>
        </div>

        <br /><br /><br /><br />

        <div class="row">
            <table class="table table-striped mx-auto">
                <thead>
                    <tr>
                        <th class="col-sm-1">#</th>
                        <th class="col-sm-2">Full Name</th>
                        <th class="col-sm-2">Phone Number</th>
                        <th class="col-sm-2">Address</th>
                        <th class="col-sm-1">Email</th>
                        <th class="col-sm-2">Note</th>
                        <th class="col-sm-2"></th>
                    </tr>
                </thead>
                <tbody id="main"></tbody>
            </table>
        </div>

    </div>
    <div class="text-center">
        <div class="btn-group">

        </div>
    </div>
    <br/>
    @RenderPage("/Views/Share/footer.cshtml")
</body>
</html>
