@using jojo.Models;
@using jojo.DTO;


@{
    Layout = null;
    NhanVienDto employee = ViewBag.nhanvien as NhanVienDto;
    List<loaichiphi> expenseTypes = ViewBag.loaichiphis as List<loaichiphi>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/image/logo.ico">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <title>Add Expense</title>
    <script>
        $(document).ready(function () {

            $('form').submit(function () {
                var ngay = $('#ngay').val();
                var chiphi = $('#chiphi').val();

                if (ngay == "") {
                    alert("Please enter a date");
                    return false;
                }

                if (chiphi == "") {
                    alert("Please enter the expense amount");
                    return false;
                }

            });
        });
    </script>

    <style>
        .minheight {
            min-height: 370px;
        }
    </style>
</head>
<body>
    @RenderPage("/Views/Share/nav_quanly.cshtml")
    <div class="container minheight">
        <div class="row">
            <h3 class="text-center text-primary">Add New Expense</h3>
            <br />
            <div class="col-sm-offset-3 col-sm-6">
                <form class="form-horizontal" method="post" action="/ChiPhi/ThemChiPhi2">
                    <div class="form-group">
                        <label class="control-label col-sm-3">Date</label>
                        <div class="col-sm-7">
                            <input type="date" name="ngay" id="ngay" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Expense Type</label>
                        <div class="col-sm-7">
                            <select class="form-control" name="loaichiphi">
                                @for (int i = 0; i < expenseTypes.Count; i++)
                                {
                                    <option value="@expenseTypes[i].id">@expenseTypes[i].tenchiphi</option>

                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Expense</label>
                        <div class="col-sm-7">
                            <div class="input-group">
                                <input type="number" class="form-control" id="chiphi" name="chiphi" min="1" max="99000000">
                                <span class="input-group-addon">VNĐ</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3"></label>
                        <div class="col-sm-3">
                            <input type="submit" class="form-control" value="Confirm">
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>









    @RenderPage("/Views/Share/footer.cshtml")
</body>
</html>